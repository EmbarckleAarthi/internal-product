{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "lib": [
            "ESNext",
        ],
        "sourceMap": true,
        "outDir": "./dist",
        "module": "NodeNext",
        "paths": {
            "@common/*": [
                "../common/*"
            ]
        },
        "esModuleInterop": true
    },
    "include": [
        "./src",
        "../common",
        "src/index.ts"
    ],
    "exclude": [
        "node_modules",
        "key.pem",
        "cert.pem"
    ],
}